<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<context-param>
	    <param-name>contextInitializerClasses</param-name>
	    <param-value>com.vdlm.config.WebAppInitializer.ConfigApplicationContextInitializer</param-value>
	</context-param>

	<!-- Map all errors to Spring MVC handler method. See CustomErrorController.generalError() -->
	<error-page>
    	<location>/generalError.xhtml</location>
	</error-page>
	
	<session-config>
        <session-timeout>15</session-timeout>
        <cookie-config>
            <name>KDSESSID</name>
            <path>/</path>
        </cookie-config>
    </session-config>
</web-app>